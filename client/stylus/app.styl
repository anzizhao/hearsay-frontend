@import 'nib'

body#landing
    padding-top 80px

body#notfound
    padding-top 80px

.page-header
    padding-bottom 40px

.hidden
    display none

.table-thumbnail
    min-height 30px

#framecontent
    height 500px
    border 1px solid #E4E4E4

.top15
    margin-top 15px

.top30
    margin-top 30px

.bottom15
    margin-bottom 15px

.bottom30
    margin-bottom 30px

.bottom200
    margin-bottom 200px !important

textarea
    resize vertical

.article-header
    margin-top 5px
    margin-bottom 0px
    font-weight 400

.article-description
    margin-top 10px
    margin-bottom 0px

.article-image
    width 100%

.article
    background-color white
    -moz-box-shadow 1px 2px 20px 1px lightgrey
    -webkit-box-shadow 1px 2px 20px 1px lightgrey
    box-shadow 1px 2px 20px 1px lightgrey
    border-radius 0

#content img
    width 100%
    height auto
    border 1px solid gainsboro

.header-image
    width 100%

iframe
    width 100%
    height auto

.limit-container
    margin auto
    max-width 700px

#content
    p
        font-family "Merriweather", "Helvetica Neue", Helvetica, Arial, sans-serif
        font-weight 300
        margin 2.0em 0 2.0em 0
        line-height 1.6
        word-wrap break-word
        font-size 17px
        letter-spacing 0.01rem
        text-align left
    h1
        font-size 1.7em
    h2
        font-size 1.6em
    h3
        font-size 1.5em

.media-object
    border 1px solid gainsboro

pre, code
    white-space pre-wrap
    white-space -moz-pre-wrap
    white-space -pre-wrap
    white-space -o-pre-wrap
    word-wrap break-word

.header-title
    word-wrap break-word

.header-title h1
    font-size 52px
    font-weight 700

@media (max-width: 768px)
    .header-title h1
        font-size 46px

@media (max-width: 480px)
    .header-title h1
        font-size 36px

p.source
    margin 10px 0 0 0
    color gray
    display inline

.navbar
    margin-bottom 0

.navbar-default
    background-color #03A9F4
    border 0

.navbar-brand
    height auto
    padding 10px 15px

.navbar-logo
    margin-right 5px

.navbar-logo-text
    vertical-align text-bottom
    color white

.navbar-header
    width 100% 

@media screen and (-webkit-min-device-pixel-ratio:0)
    select:focus, textarea:focus, input:focus
        font-size 16px
        background #eee

.thumbnail
    -moz-transition none
    -webkit-transition none
    -o-transition color 0 ease-in
    transition none

a
    color #4A4A4A

.caption
    word-wrap: break-word;

#content a
    text-decoration underline

#content a:hover
    text-decoration underline

a:hover
    text-decoration none

.caption-box
    overflow: hidden

.createdAt-date 
    color rgba(128, 128, 128, 0.69)
    font-size smaller

.topButton 
    position fixed
    right 15px
    bottom 15px 
    color black 
    cursor pointer
    border-radius 5px
    z-index 100
    background-color #00bcd4
    box-shadow 3px 2px 10px gray 
    width 40px
    height 40px
    border-radius 50% 



.topButton  > i 
    color white
    position relative
    left 50%
    top 50%
    transform translate(-50%, -50%)

.article-source-read  
    padding 0 5px 0 20px
    font-size  10px 

.article-source-read > i 
    color  green

.setting 
    float right 
    

.setting > ul 
    min-width 0
    width 105px 
    left -80px
    top 80%
    margin 0
    padding-top 0
    padding-bottom 0



.setting > ul > li 
    border-bottom   rgba(128, 128, 128, 0.34) solid 1px
    padding 10px 8px 
    margin 3px 0 0 0 
    cursor pointer

.setting > ul > li:hover 
    background-color: rgba(128, 128, 128, 0.27)
    
.setting i
    margin-top 10px
    cursor pointer
    padding 0 0 10px 15px 

.setting .caret 
    margin-top 25px
    cursor pointer
    border-top 7px solid #000
    border-right 7px solid transparent
    border-left 7px solid transparent


.open > .dropdown-menu
    min-width 0
    width 100px 
    padding 0 5px
    border-radius 5px


